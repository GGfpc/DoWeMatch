<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ggarc_000.sacador.AdicionarPerguntas"
    android:background="#ff26b2ba">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar perguntas"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Criar"
        android:id="@+id/button"
        android:onClick="criaOnClick"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#ffffffff"
        android:textColor="#ff26b2ba"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pergunta1"
            android:layout_row="0"
            android:layout_column="0"
            android:text=""
            android:backgroundTint="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pergunta2"
            android:layout_row="1"
            android:layout_column="0"
            android:text=""
            android:backgroundTint="#ffffffff"/>

        <ToggleButton
            android:textStyle="bold"
            android:textColor="#ff26b2ba"
            android:background="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textOff="Não"
            android:textOn="Sim"
            android:id="@+id/toggleButton2"
            android:layout_row="1"
            android:layout_column="5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pergunta3"
            android:layout_row="2"
            android:layout_column="0"
            android:text=""
            android:backgroundTint="#ffffffff"/>

        <ToggleButton
            android:textStyle="bold"
            android:textColor="#ff26b2ba"
            android:background="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textOff="Não"
            android:textOn="Sim"
            android:id="@+id/toggleButton3"
            android:layout_row="2"
            android:layout_column="5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pergunta4"
            android:layout_row="3"
            android:layout_column="0"
            android:text=""
            android:backgroundTint="#ffffffff"/>

        <ToggleButton
            android:textStyle="bold"
            android:textColor="#ff26b2ba"
            android:background="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:textOff="Não"
            android:textOn="Sim"
            android:id="@+id/toggleButton4"
            android:layout_row="3"
            android:layout_column="5"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pergunta5"
            android:layout_row="4"
            android:layout_column="0"
            android:text=""
            android:backgroundTint="#ffffffff"/>

        <ToggleButton
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:textOff="Não"
            android:textOn="Sim"
            android:layout_row="0"
            android:layout_column="5"
            android:textColor="#ff26b2ba"
            android:background="#ffffffff"
            android:padding="-5dp"
            android:checked="false"
            android:id="@+id/toggleButton1"
            />

        <ToggleButton
            android:textStyle="bold"
            android:textColor="#ff26b2ba"
            android:background="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:textOff="Não"
            android:textOn="Sim"
            android:id="@+id/toggleButton5"
            android:layout_row="4"
            android:layout_column="5"
            android:checked="false" />
    </GridLayout>


</RelativeLayout>
