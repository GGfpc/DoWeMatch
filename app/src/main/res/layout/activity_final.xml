<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:background="#ff26b2ba"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ggarc_000.sacador.Final">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terminado"
        android:id="@+id/sacadorFim"
        android:textSize="50dp"
        android:clickable="false"
        android:longClickable="false"
        android:inputType="none"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_marginTop="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp"
        android:longClickable="false"
        android:textIsSelectable="false"
        android:id="@+id/percentagemCerta"
        android:layout_below="@+id/sacadorFim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:clickable="false"
        android:enabled="true"
        android:inputType="none"
        android:linksClickable="false"
        android:typeface="sans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voltarInicio"
        android:text="@string/inicio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:onClick="deNovoOnClick"
        android:typeface="sans" />
</RelativeLayout>
