<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ggarc_000.sacador.Selector"
    android:background="#ff26b2ba">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deseja criar perguntas ou usar as default?"
        android:id="@+id/SelectorTexto"
        android:layout_marginTop="144dp"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:longClickable="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar"
        android:id="@+id/ButtonCriar"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/SelectorTexto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff26b2ba"
        android:background="#ffffffff"
        android:textStyle="bold"
        android:onClick="criarOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:id="@+id/ButtonDefault"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/ButtonCriar"
        android:layout_toRightOf="@+id/ButtonCriar"
        android:layout_toEndOf="@+id/ButtonCriar"
        android:textColor="#ff26b2ba"
        android:background="#ffffffff"
        android:textStyle="bold"
        android:nestedScrollingEnabled="true"
        android:onClick="defaultOnClick" />
</RelativeLayout>
